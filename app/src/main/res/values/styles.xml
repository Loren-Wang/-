<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Start" parent="android:Theme">
        <item name="android:windowBackground">@drawable/arrow_left_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="home_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/common_dp_1</item>
    </style>
    <style name="home_show">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size_5</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/common_dp_1</item>
        <item name="android:paddingRight">@dimen/common_dp_1</item>
    </style>
    <style name="home_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width_or_height</item>
        <item name="android:background">@color/default_line_bg</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_width_or_height</item>
        <item name="android:background">@color/default_line_bg</item>
    </style>


    <style name="main_bottom_image">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y40</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:onClick">mainTabClick</item>
    </style>
    <style name="main_bottom_text">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/app_text_size_13</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">mainTabClick</item>
    </style>

    <style name="data_date_select">
        <item name="android:layout_width">@dimen/x150</item>
        <item name="android:layout_height">@dimen/y45</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/app_text_size_3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="data_options" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:layout_width">@dimen/x100</item>
        <item name="android:layout_height">@dimen/y50</item>
        <item name="android:textSize">@dimen/app_text_size_13</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">dataSearchOptionsClick</item>
    </style>

</resources>
